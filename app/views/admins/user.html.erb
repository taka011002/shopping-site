<div class="admin_user_list"></div>
  <h1>管理者ユーザー一覧</h1>

  <ul class="users">
    <% @admin_users.each do |admin| %>
    <li>
      <%= admin.name  %>
      <%= admin.email %>
      <%= link_to "管理者権限の削除", admin_user_path(id: admin[:id]) , method: :post,
                        data:{ cofirm: "OK?"} %>
    </li>
    <% end %>
  </ul>
  <div class="add_admin"></div>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="add_title"> 管理ユーザーの追加　</h1>
        <%= form_tag admin_create_path, :method　=> 'post' do %>
        <p>登録済みユーザーのメールアドレス</p>
        <%= text_field_tag :email, params[:email], class: "form-control" %>
        <%= submit_tag "追加", class: "btn btn-primary" %>
        <% end %>

      </div>
    </div>

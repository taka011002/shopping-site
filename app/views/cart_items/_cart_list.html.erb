<div>
  <%= link_to "商品一覧へ戻る", products_path , class: "btn btn-info" %>
  <table class="table">
    <thead>
      <tr>
        <th>画像</th>
        <th>商品名</th>
        <th>金額</th>
        <th></th>
      </tr>
    </thead>
    <% @cart_items.each do |item| %>
    <tbody>
      <td><%= image_tag(item.product.main_image.thumb.url)%></td>
      <td><%= item.product.name  %></td>
      <td><%= item.product.price%>円</td>
      <td><%= link_to "削除", cart_item_path(item),
                          method: :delete,
                          class: "btn btn-danger",
                          data:{ confirm:"カートから削除してよろしいでしょうか?",
                                  cancel:"いいえ",
                                  commit:"はい",
                                  title: "注文の確認"}%></td>
    </tbody>
    <% end %>
    <thead>
      <tr>
        <th></th>
        <th></th>
        <th>合計金額</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <td></td>
      <td></td>
      <td><%= @cart_sum %>円</td>
      <td><%= link_to "注文する", orders_path,class:"btn btn-primary" %></td>
    </tbody>
  </table>
</div>

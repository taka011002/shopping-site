<h1>ショッピングカート</h1>
<div>
  <div>
    <table class="table">
      <thead>
        <tr>
          <th>画像</th>
          <th>商品名</th>
          <th>金額</th>
          <th></th>
        </tr>
      </thead>
      <tfoot>
        <td>合計金額:<%= @cart_sum %>円</td>
        <td><%= link_to "注文する", orders_path,class:"btn btn-primary" %></td>
      </tfoot>
      <% @cart_items.each do |item| %>
      <tbody>
        <td><%= image_tag(item.product.main_image)%></td>
        <td><%= item.product.name  %></td>
        <td><%= item.product.price%>円</td>
        <td><%= link_to "削除", cart_item_path(item),
                            method: :delete,
                            date:{ confirm:"削除してよろしいでしょうか"} %></td>
      </tbody>
      <% end %>
    </table>
  </div>
</div>
